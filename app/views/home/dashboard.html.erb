<% content_for(:turbolink_caching_directive, "no-cache")%>
<% content_for :heading do %>
  <h2 class="text-5xl"><%= render(HeadingComponent.new(text:'On The List'))%></h2>
<% end %>
<div class="flex flex-col sm:flex-row sm:space-x-4">
  <div class="py-4 flex-1">
  <div>
    <span class="float-right"></span>
    <h3 class="text-2xl text-secondary">
     <%= link_to 'Lists >', lists_path %>
    </h3>
    </div>
     <span class="text-xs text-primary">Recently Changed:</span>
    <ul class="sm:pl-0 space-y-2">
    <% @lists.each do |list| %>
      <li class="text-lg  rounded-md shadow bg-white active:bg-primary active:text-white transition duration-75">
        <%= link_to(list_list_items_path(list), class: "block w-auto h-auto p-2 ") do %>
          <%= list.name %> - <span class="text-xs text-gray-400 ">[<%= list.list_items.count%>]</span>
        <% end %>
      </li>
    <% end %>
    </ul>
  </div>
  <div class="py-4 flex-1">
    <h3 class="text-2xl  text-secondary">
      <%= link_to 'Items >', items_path %>
    </h3>
      <span class="text-xs text-primary">Recently Changed:</span>
      <ul class="sm:pl-0 space-y-2">
        <% @items.each do |item| %>
          <li class="text-lg p-2  rounded-md shadow bg-white">
            <%= item.name %> - <span class="text-xs text-gray-400 "> <%= item.created_at == item.updated_at ? "created" : "updated" %> </span>
          </li>
        <% end %>
      </ul>
  </div>
  <div class="py-4 flex-1">
    <h3 class="text-2xl text-secondary"> <%= link_to 'Recipes >', recipes_path %> </h3>
  </div>
</div>
